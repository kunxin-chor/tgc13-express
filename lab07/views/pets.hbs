{{#extends 'base'}}

{{#block "content"}}
<h1>All Pets</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        {{#each pets}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.cateogry.name}}</td>
        </tr>
        {{/each}}

    </tbody>
</table>
{{/block}}

{{/extends}}