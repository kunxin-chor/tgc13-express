{{#extends 'base'}}

{{#block "content"}}

<h1>Editing Note</h1>
<form method="POST">
    <div>
        <label class="form-label">Note</label>
        <textarea class="form-control" name="content">{{note.content}}</textarea>
    </div>
    <input type="submit" class="btn btn-primary my-3" value="Update Note"/>
    
</form>

{{/block}}

{{/extends}}